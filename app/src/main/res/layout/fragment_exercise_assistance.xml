<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:fillViewport="true"
    tools:context=".home.fragments.exerciseAssistance.ExerciseAssistanceFragment">


    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_normal"
        android:layout_marginTop="@dimen/margin_normal"
        android:orientation="vertical">




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:ignore="UselessParent">

            <TextView
                android:layout_weight="0.4"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="Exercise\nAssistance"
                android:textSize="28sp"
                android:textStyle="bold"
                android:visibility="visible"
                android:gravity="center"
                android:textColor="@color/colorSecondary"
                android:fontFamily="@font/poppins"   />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_small"
                android:fontFamily="@font/poppins"
                android:layout_marginTop="@dimen/margin_40dp"
                android:text="@string/rm_calculator"
                android:textSize="18sp"
                android:textColor="@color/colorDivider"

                android:visibility="visible" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:id="@+id/cardCalculator"
                app:cardCornerRadius="@dimen/margin_small"
                app:cardUseCompatPadding="true"
                android:layout_marginTop="@dimen/margin_small"
                android:layout_marginRight="@dimen/margin_small"
                android:layout_marginLeft="@dimen/margin_small">



                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/enter_log_gradient"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="200dp"
                        android:layout_height="140dp"
                        android:layout_alignParentBottom="true"
                        android:src="@drawable/i4"
                        android:scaleType="fitXY"
                        android:layout_alignParentEnd="true"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/rep_max_calculator"
                        android:layout_marginTop="@dimen/margin_normal"
                        android:layout_marginStart="@dimen/margin_normal"
                        android:layout_marginEnd="@dimen/margin_normal"
                        android:textColor="@color/white"
                        android:fontFamily="@font/poppins"
                        android:textStyle="bold"
                        android:textSize="22sp"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:elevation="@dimen/margin_small"
                        android:text="@string/use_this_calculator_to_figure_out_what_weight_to_use"                                android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_16sdp"
                        android:layout_marginBottom="@dimen/_16sdp"
                        android:textSize="20sp"
                        android:layout_marginTop="@dimen/_50sdp"
                        android:visibility="visible"
                        android:gravity="start"
                        android:textColor="@color/white"
                        android:fontFamily="@font/poppins"   />




                </RelativeLayout>



            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_small"
                android:fontFamily="@font/poppins"
                android:layout_marginTop="@dimen/margin_normal"
                android:text="@string/video_tutorials"
                android:textSize="18sp"
                android:textColor="@color/colorDivider"

                android:visibility="visible" />
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:id="@+id/cardVideoTutorials"
                app:cardCornerRadius="@dimen/margin_small"
                app:cardUseCompatPadding="true"
                android:layout_marginTop="@dimen/margin_small"
                android:layout_marginRight="@dimen/margin_small"
                android:layout_marginLeft="@dimen/margin_small">



                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/tutorials_gradient"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="200dp"
                        android:layout_height="140dp"
                        android:layout_alignParentBottom="true"
                        android:src="@drawable/i6"
                        android:scaleType="fitXY"
                        android:layout_alignParentEnd="true"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tutorials"
                        android:layout_marginTop="@dimen/margin_normal"
                        android:layout_marginStart="@dimen/margin_normal"
                        android:layout_marginEnd="@dimen/margin_normal"
                        android:textColor="@color/white"
                        android:fontFamily="@font/poppins"
                        android:textStyle="bold"
                        android:textSize="22sp"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:elevation="@dimen/margin_small"
                        android:text="@string/learn_how_to_perform_your_favourite_exercises"                                android:layout_marginEnd="@dimen/_16sdp"
                        android:layout_marginBottom="@dimen/_16sdp"
                        android:textSize="20sp"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_50sdp"
                        android:visibility="visible"
                        android:gravity="start"
                        android:textColor="@color/white"
                        android:fontFamily="@font/poppins"   />





                </RelativeLayout>




            </androidx.cardview.widget.CardView>







        </LinearLayout>



    </LinearLayout>






</ScrollView>