<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="@dimen/margin_small"
        android:layout_weight="1"
        app:cardElevation="2dp"
        android:layout_marginRight="@dimen/margin_small"
        android:layout_marginLeft="@dimen/margin_small"
        app:cardCornerRadius="@dimen/margin_small"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">






            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:id="@+id/layout">



                <ImageView
                    android:id="@+id/image"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"

                    />
                <ImageView
                    android:visibility="visible"
                    android:id="@+id/videoIcon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/v_icon"
                    android:layout_centerInParent="true"
                    app:tint="@color/white" />



            </RelativeLayout>




            <TextView
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/open_sans"
                android:gravity="start"
                android:layout_marginTop="@dimen/margin_small"
                android:layout_marginEnd="@dimen/margin_small"
                android:layout_marginStart="@dimen/margin_small"
                android:textColor="@color/colorSecondary"
                android:text="@string/workout_name"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/open_sans"
                android:gravity="start"
                android:visibility="gone"
                android:layout_marginTop="@dimen/margin_mini"
                android:layout_marginEnd="@dimen/margin_small"
                android:layout_marginStart="@dimen/margin_small"
                android:text="@string/description"
                android:textSize="12sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/open_sans"
                android:gravity="start"
                android:visibility="gone"

                android:layout_marginTop="@dimen/margin_small"
                android:layout_marginEnd="@dimen/margin_small"
                android:layout_marginStart="@dimen/margin_small"
                android:textColor="@color/colorSecondary"
                android:text="@string/description"
                android:textSize="16sp" />

            <LinearLayout
                android:visibility="gone"

                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginStart="@dimen/margin_small"
                android:layout_marginEnd="@dimen/margin_small"
                android:layout_marginTop="@dimen/margin_mini"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="5dp"
                    android:layout_height="5dp"
                    android:src="@drawable/circle"
                    android:layout_marginTop="@dimen/margin_small"
                    android:layout_marginBottom="@dimen/margin_mini"
                    android:layout_marginStart="@dimen/margin_mini"/>
                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Complete 1 round for 1 minute."
                    android:layout_marginTop="2dp"
                    android:textSize="12sp"
                    android:layout_marginStart="@dimen/margin_small"/>




            </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginStart="@dimen/margin_small"
                android:layout_marginEnd="@dimen/margin_small"
                android:layout_marginTop="@dimen/margin_mini"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="5dp"
                    android:layout_height="5dp"
                    android:src="@drawable/circle"
                    android:layout_marginTop="@dimen/margin_small"
                    android:layout_marginBottom="@dimen/margin_mini"
                    android:layout_marginStart="@dimen/margin_mini"/>
                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Complete 2 rounds of 30 seconds each."
                    android:layout_marginTop="2dp"
                    android:textSize="12sp"
                    android:layout_marginStart="@dimen/margin_small"/>




            </LinearLayout>    <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
            android:visibility="gone"

            android:layout_marginBottom="@dimen/margin_normal"
                android:layout_marginStart="@dimen/margin_small"
                android:layout_marginEnd="@dimen/margin_small"
                android:layout_marginTop="@dimen/margin_mini"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="5dp"
                    android:layout_height="5dp"
                    android:src="@drawable/circle"
                    android:layout_marginTop="@dimen/margin_small"
                    android:layout_marginBottom="@dimen/margin_mini"
                    android:layout_marginStart="@dimen/margin_mini"/>
                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pause 1â€“2 seconds at the top and return to the starting position."
                    android:layout_marginTop="2dp"
                    android:textSize="12sp"
                    android:layout_marginStart="@dimen/margin_small"/>




            </LinearLayout>








        </LinearLayout>




    </androidx.cardview.widget.CardView>



</LinearLayout>