<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".home.fragments.stayontrack.StayOnTrackFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_weight="0.4"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Stay on\nTrack"
            android:textSize="28sp"
            android:textStyle="bold"
            android:visibility="visible"
            android:gravity="center"
            android:textColor="@color/colorSecondary"
            android:fontFamily="@font/poppins"   />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_small"
            android:fontFamily="@font/poppins"
            android:layout_marginTop="@dimen/margin_40dp"
            android:text="@string/workout_reminders"
            android:textSize="18sp"
            android:textColor="@color/colorDivider"
            android:visibility="visible" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:id="@+id/cardNotification"
            app:cardCornerRadius="@dimen/margin_small"
            app:cardUseCompatPadding="true"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_marginRight="@dimen/margin_small"
            android:layout_marginLeft="@dimen/margin_small">



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/notification_gradient"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="140dp"
                    android:layout_alignParentBottom="true"
                    android:src="@drawable/i2"
                    android:scaleType="fitXY"
                    android:layout_alignParentEnd="true"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/notifications"
                    android:layout_marginTop="@dimen/margin_normal"
                    android:layout_marginStart="@dimen/margin_normal"
                    android:layout_marginEnd="@dimen/margin_normal"
                    android:textColor="@color/white"
                    android:fontFamily="@font/poppins"
                    android:textStyle="bold"
                    android:textSize="22sp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="@dimen/margin_small"
                    android:text="@string/set_notifications_to_remind_you_for_your_workout"
                    android:layout_marginEnd="@dimen/_16sdp"
                    android:layout_marginBottom="@dimen/_16sdp"
                    android:textSize="20sp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_50sdp"
                    android:visibility="visible"
                    android:gravity="start"
                    android:textColor="@color/white"
                    android:fontFamily="@font/poppins"   />



            </RelativeLayout>



        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_small"
            android:fontFamily="@font/poppins"
            android:layout_marginTop="@dimen/margin_normal"
            android:text="@string/set_and_track_goals"
            android:textSize="18sp"
            android:textColor="@color/colorDivider"

            android:visibility="visible" />
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:id="@+id/cardGoals"
            app:cardCornerRadius="@dimen/margin_small"
            app:cardUseCompatPadding="true"
            android:layout_marginBottom="@dimen/margin_small"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_marginRight="@dimen/margin_small"
            android:layout_marginLeft="@dimen/margin_small">



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/edit_gradient"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="140dp"
                    android:layout_alignParentBottom="true"
                    android:src="@drawable/i3"
                    android:scaleType="fitXY"
                    android:layout_alignParentEnd="true"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Goals"
                    android:layout_marginTop="@dimen/margin_normal"
                    android:layout_marginStart="@dimen/margin_normal"
                    android:layout_marginEnd="@dimen/margin_normal"
                    android:textColor="@color/white"
                    android:fontFamily="@font/poppins"
                    android:textStyle="bold"
                    android:textSize="22sp"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="@dimen/margin_small"
                    android:text="Set goals for yourself and keep track of them"
                    android:layout_marginEnd="@dimen/_16sdp"
                    android:layout_marginBottom="@dimen/_16sdp"
                    android:textSize="20sp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_50sdp"
                    android:visibility="visible"
                    android:gravity="start"
                    android:textColor="@color/white"
                    android:fontFamily="@font/poppins"
                    tools:ignore="HardcodedText" />



            </RelativeLayout>




        </androidx.cardview.widget.CardView>


    </LinearLayout>



</ScrollView>